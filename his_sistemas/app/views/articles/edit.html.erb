		<div class="col-12 col-md-6">
			<div id="showform">
				<%= render 'form', article: @article %>
			</div>
			<div class="mt-3">
	      		<%= link_to '<i class="fas fa-angle-left"></i>'.html_safe, article_path, class: "btn btn1", id:"back"%>
