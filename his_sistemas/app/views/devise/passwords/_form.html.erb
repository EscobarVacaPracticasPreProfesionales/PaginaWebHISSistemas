<%= form_for(resource, as: resource_name, url: password_path(resource_name), remote: true, html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group">
    <%= f.label :password, t(".new_password") %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('.characters_minimum')%>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control'%>
    <% if flash[:errors].present?  && flash[:errors].key?('password') %>
    <% flash[:errors]['password'].each do |msg|%>
      <small class="rl lato"><%=msg%></small>                  
    <%end%>
  <%end%>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, t(".confirm_new_password") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    <% if flash[:errors].present?  && flash[:errors].key?('password_confirmation') %>
    <% flash[:errors]['password_confirmation'].each do |msg|%>
      <small class="rl lato"><%=msg%></small>                  
    <%end%>
  <%end%>
  </div>

  <div class="actions">
    <%= f.submit t(".change_my_password"), class: "btn btn-block btn2 lato"  %>
  </div>
<% end %>