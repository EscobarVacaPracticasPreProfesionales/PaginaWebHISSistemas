<% if flash[:errors].present? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: flash[:errors].count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% flash[:errors].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
