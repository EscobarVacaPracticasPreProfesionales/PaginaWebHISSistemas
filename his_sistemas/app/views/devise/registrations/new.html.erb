<% content_for :head do %>
    <%= stylesheet_link_tag "registration_new", media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for :foot do %>
  <%= javascript_include_tag 'autoc', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="container mt-3">
  <div class="row justify-content-center mb-3">
    <%= image_tag(image_path("logo.png"),:class=>"img-fluid",:alt=>"logoRegistro") %>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
      <header class="card-header">
        <%= link_to t(".sign_in"), new_session_path(resource_name) , :class=>"float-right btn btn3 mt-1" %>
        <h4 class="card-title mt-2 wl mont"><%=t(".sign_up")%></h4>
      </header>
      <article class="card-body rale">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.fields_for :contact do |c| %>
            <div class="form-row">
              <div class="field col form-group">
                <%= c.label :name %>
                <%= c.text_field :name , autofocus: true, class: 'form-control'%>
              </div>
              <div class="field col form-group">
                <%= c.label :lastname %>
                <%= c.text_field :lastname, class: 'form-control' %>
              </div>
            </div>
            <div class="field form-group">
              <%= c.label :company, 'Compañía'  %>
              <%= c.text_field :company, class: 'form-control'  %>
            </div>
            <%=c.hidden_field :emailcontact %>
            
            <div class="form-row">
              <div class="field col form-group">
                <%= c.label :phone1, 'Teléfono 1' %>
                <%= c.text_field :phone1, class: 'form-control'   %>
              </div>
              <div class="field col form-group">
                <%= c.label :phone2, 'Teléfono 2' %>
                <%= c.text_field :phone2, class: 'form-control'   %>
              </div>
            </div>
          <% end %>
          <div class="field form-group">
              <%= f.label :email, 'Email' %>
              <%= f.email_field :email, class: 'form-control'  %>
            </div>
            <% if user_signed_in? %>
              <div class="field form-group">
                <%= f.label :user_type_id, 'Tipo de Usuario' %>
                <%= f.select(:user_type_id,options_from_collection_for_select(@user_types, 'id', 'tipo',2), {}, { :class => 'form-control' } )%>
              </div>
            <%end%>
          <div class="field form-group">
            <%= f.label :password, 'Contraseña' %>
            <% if @minimum_password_length %>
            <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'   %>
          </div>
          <div class="field form-group">
            <%= f.label :password_confirmation, 'Confirmar contraseña' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit t(".sign_up"), id: "submit" ,class: "btn btn-block btn2 lato" %>
          </div>
        <% end %>
      </article> <!-- card-body end .// -->
      <div class="border-top card-body text-center lato"><%= t('.have_an_account?') %> <a href=""><%=t(".sign_in")%></a></div>
      </div> <!-- card.// -->
    </div> <!-- col.//-->

  </div> <!-- row.//-->

</div> 


