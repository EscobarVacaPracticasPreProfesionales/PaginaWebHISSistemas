<% content_for :head do %>
    <%= stylesheet_link_tag "contactus", media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>
<%= render "layouts/header_main" %>

<div id="formulario">
	<section class="container" id="consultasHolder">
		<div class="row">
			<div class="col col-12 col-sm-12 col-md-12 col-lg-8">
				<h1 class="wl mt-3">Consultas</h1>
				<%= form_tag("send_form", method:"post",:class=>"wl lato mt-4",multipart: true) do %>
					<div class="form-group">
						<%=label_tag(:nombre,"Nombre: ")%>
						<%=text_field_tag(:nombre,"",:class=>"form-control",:pattern=>"[A-za-z ]+", :placeholder=>"John Doe", :required=>true)%>
					</div>
					<div class="form-group">
						<%=label_tag(:empresa,"Empresa: ")%>
						<%=text_field_tag(:empresa,"",:class=>"form-control",:pattern=>"[A-za-z ]+", :placeholder=>"HIS Sistemas")%>
					</div>
					<div class="form-group">
						<%=label_tag(:email,"Email: ")%>
						<%=email_field(:email,"",:class=>"form-control", :pattern=>"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", :placeholder=>"your@email.com",:required=>true)%>
					</div>
					<div class="form-group">
						<%=label_tag(:tel,"Teléfono: ")%>
						<%= telephone_field(:tel,"", :pattern =>"[0-9]{10}" , :placeholder=>"0999999999", :required=>true,:class=>"form-control")%>
					</div>
					
					<div class="form-group">
						<%=label_tag(:asunto,"Asunto: ")%>
						<%=text_field_tag(:asunto,"",:class=>"form-control",:pattern=>"[A-za-z ]+", :placeholder=>"Servicio de cableado", :required=>true)%>
					</div>
					<div class="form-group">
						<%=label_tag(:mensaje,"Mensaje: ")%>
						<%=text_area_tag(:mensaje,"",:class=>"form-control",:placeholder=>"Escribe tu mensaje/consulta aquí", :required=>true)%>
					</div>
					<div class="form-group">
						<%=label_tag(:doc,"Adjuntar documento: ")%>
						<%=file_field_tag('doc',:class=>"form-control-file",accept:".doc, .docx,.pdf,.odt,image/*")%>
					</div>
					<div>
						<%= submit_tag("Enviar",:class => "btn btn2") %>
					</div>
					<br>
				<%end%>
			</div>
			<div id="corr" class="col col-12 col-lg-4 d-none d-lg-block">
				<%= image_tag(image_path("mail.png"),:class=>"img-fluid",:alt=>"correo") %>		
			</div>
		</div>
	</section>
</div>
<div class="container">
	<section class ="row mt-3 mb-3" id="datos">
		<div class="col col-12">
			<h1> Información de contacto </h1>
		</div>

		<div class="col col-12 col-sm-12 col-md-6">
			<div  id="info">
				<p>
					Guayaquil-Ecuador
				</p>
				<p>
					Dirección: Chimborazo 3216 entre Vacas Galindo y Cañar
				</p>
				<p>
					Teléfonos: (04) 2347574 -  2580379
				</p>
				<p>
					email: hissistemasgye@gmail.com
				</p>
			</div>
		</div>

		<div class="col col-12 col-sm-12 col-md-6" >
			<iframe class="img-fluid" id="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1369.4329520725523!2d-79.88967820848681!3d-2.214410451523677!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x902d6e4466a9400b%3A0x2222191ad93478df!2sChimborazo+3216%2C+Guayaquil+090101!5e0!3m2!1ses!2sec!4v1543281100552" allowfullscreen></iframe>
		</div>
	</section>
</div>
		
