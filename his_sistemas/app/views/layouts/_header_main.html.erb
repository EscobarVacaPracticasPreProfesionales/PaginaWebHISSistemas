<div id="top" class="container">
	<div class="row">
		<div class="col col-12">
			<div class="row justify-content-between">
				<header class="col-md-6 col-lg-4 d-none d-md-block" id="logoholder">
					<%= image_tag(image_path("logo.png"),:class=>"img-fluid", :alt=>"logoHIS") %>		
				</header>
				<div class="px-3 d-none d-md-block my-auto">
      				<% if user_signed_in? %>
			        	Logged in as <strong><%= current_user.email %></strong>.
			        	<%= link_to t('.edit_profile'), edit_user_registration_path, :class => 'lato btn btn2' %>
			        	<%= link_to t(".sign_out"), destroy_user_session_path, method: :delete, :class => 'lato btn btn2'  %>
			      	<% else %>
			        	<%= link_to t(".sign_in"), new_user_session_path, :class => 'lato btn btn1'  %>
			        	<%= link_to t(".sign_up"), new_user_registration_path, :class => 'lato btn btn2'  %>
			      	<% end %>
				</div>
			</div>

			<hr class="d-none d-md-block m-auto" id="line">
		</div>
	</div>
</div>
