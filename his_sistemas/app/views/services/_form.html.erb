<%= form_with(model: service) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: service.errors.count,
                 resource: service.class.model_name.human.downcase)
       %>
      </h2>
      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
  <div class="form row">
    <div class="field col-12 form-group">
      <%= form.label :pictures %>
      <%= form.file_field :pictures, multiple: true, class: 'form-control lato'%>
    </div>

    <div class="field col-12 form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control lato'%>
    </div>

    <div class="field col-12 form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control lato', rows: 5%>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <%= hidden_field_tag :update_pictures, false%>

    <div class="col-12 actions">
      <%= form.submit t('pub'), class: "btn btn2 lato"%>
    </div>
  </div>
<% end %>

<% content_for :foot do %>
  <%= javascript_include_tag 'preview_images', 'data-turbolinks-track': 'reload' %>
<% end %>