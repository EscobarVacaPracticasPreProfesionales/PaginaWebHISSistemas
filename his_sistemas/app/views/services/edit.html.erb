<div class="container">
	<h1 class="py-3"><%= t('.edit_service')%></h1>

	<div class="row">
		<div class="col-12 col-md-6">
			<%= render 'form', service: @service %>
      		<%= link_to octicon("arrow-left"), services_path, class: "btn btn1 mt-3"%>
		</div>
		<div class="col-12 col-md-6">
			<div id='my-element' data-pics='<%= @pics.to_json%>'></div>
			<% if @service.pictures.any? %>
				<div class="row" id="result">
				</div>
			<%end%>
		</div>
	</div>
</div>
<% content_for :foot do %>
  <%= javascript_include_tag 'preview_images', 'data-turbolinks-track': 'reload' %>
<% end %>
